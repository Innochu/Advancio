@page
@model AdvansioIntLtd.Pages.DashBoard.DashBoardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Assuming you have a shared layout
}

<div class="container-fluid mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2" style="position: relative;">
            <!-- Static sidebar image -->
            <img src="~/images/sidebar.png" alt="Sidebar Image" class="img-fluid">

            <!-- Float the image on the sidebar -->
            <img src="~/images/Group 128.png" alt="Float Image" style="position: absolute; top: 30px; left: 25px; height: 40px;">
        </div>

        <!-- Main Content Area -->
        <div class="col-md-10">
            <!-- Image above the cards -->
            <div class="d-flex justify-content-between  mb-5" style="height:30px">
                <img src="~/images/header.png" alt="Image Above Cards" class="img-fluid">
                <img src="~/images/search.png" alt="Image Above Cards" class="img-fluid">
                <img src="~/images/notification 2.png" alt="Image Above Cards" class="img-fluid"> 
                <img src="~/images/Venty Loans.png" alt="Image Above Cards" style="height:20px" class="img-fluid">
                <img src="~/images/name.png" alt="Image Above Cards" class="img-fluid">
            </div>

            <div class="row">
                <!-- First Card -->
                <div class="col-md-3">
                    <div class="card">
                     
                        <div class="card-body m-3">
                            <h4 class="card-title">Wallet </h4>
                            <p class="card-text m-2c">Balance: @Model.Balance</p>
                        </div>
                    </div>
                </div>

                <!-- Second Card -->
                <div class="col-md-3">
                    <div class="card">
                        
                        <div class="card-body">
                            <img src="~/images/Frame 5.png" alt="Image Above Cards" class="img-fluid mb-3">
                           
                        </div>
                    </div>
                </div>

                <!-- Third Card -->
                <div class="col-md-3">
                    <div class="card">

                        <div class="card-body">
                            <img src="~/images/Frame 6.png" alt="Image Above Cards" class="img-fluid mb-3">

                        </div>
                    </div>
                </div>

                <!-- Fourth Card -->
                <div class="col-md-3">
                    <div class="card">

                        <div class="card-body">
                            <img src="~/images/Frame 7.png" alt="Image Above Cards" class="img-fluid mb-3">

                        </div>
                    </div>
                </div>

                <!-- Images below the cards -->
                <div class="row mt-3 mb-4">
                    <div class="col-md-6">
                        <img src="~/images/Frame 13.png" alt="bbb Image" class="img-fluid" style="height: 250px;">
                    </div>
                    <div class="col-md-6" style="position: relative;">
                        <img src="~/images/Rectangle 274 (1).png" alt="jjh Image" class="img-fluid" style="height: 250px;">
                        <!-- Float the image on the second image -->
                        <img src="~/images/Ellipse 207 (1).png" class="p-2" alt="Float Image" style="position: absolute; top: 20px; left: 40px;">
                        <img src="~/images/86%.png" alt="gg Image" class="img-fluid" style="position: absolute; top: 150px; left: 100px; width:40px;">
                         <img src="~/images/Group 111.png" class="p-2" alt="Float Image" style="position: absolute; top: 40px; left: 150px;">

                        <img src="~/images/total.png" alt="hhh Image" class="img-fluid" style="position: absolute; top: 100px; right: 100px; width:70px;">
                        <img src="~/images/follower.png" alt="gg Image" class="img-fluid" style="position: absolute; top: 150px; right: 100px; width:70px;">
                    
                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-md-4">
                        <img src="~/images/Saveproducts.png" alt="bbb Image" class="img-fluid" style="max-width: 100%; max-height: 100px;">
                    </div>
                    <div class="col-md-4">
                        <img src="~/images/StockProducts.png" alt="jjh Image" class="img-fluid" style="max-width: 100%; max-height: 100px;">
                    </div>
                    <div class="col-md-4">
                        <img src="~/images/Topsellingproducts.png" alt="jjh Image" class="img-fluid" style="max-width: 100%; max-height: 100px;">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
