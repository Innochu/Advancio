@page
@model AdvansioIntLtd.Pages.DashBoard.DashBoardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Assuming you have a shared layout
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">Dashboard</div>
                <div class="card-body">
                    <h4 class="card-title">Wallet Balance</h4>
                    <p class="card-text">Current Balance: @Model.Balance</p>
                </div>
            </div>
        </div>
    </div>
</div>
